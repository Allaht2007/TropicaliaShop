<div class=" swiper-slide class-prod ">
    <div class="class-prod__desc">
       <img src="../src/negroni.webp" alt="Imagem do produto" draggable="false">
       <span class="pointer">Nome da Bebida <%= id %></span>
       <span class="pointer">Preço Final</span>
       <span class="class-span__orn pointer">Preço Original</span>
    </div>
    <div class="line-center"></div>
    <div class="class-prod__btn">
       <div class="class-prod-btn__qnt">
             <button class="ic--round-minus pointer" onclick="mudaQuantidade('qnt<%= id %>', -1)"></button>
             <input type="number" id="qnt<%= id %>" min="0" max="100" value="0">
             <button class="ic--round-plus pointer" onclick="mudaQuantidade('qnt<%= id %>', 1)"></button>
       </div>
       <form action="/enviaCarrinho" method="post">
             <input type="hidden" name="idClass" value="<%= id %>">
             <input type="hidden" name="qntClass" id="hidden-qnt<%= id %>" value="0">
             <button type="submit" class="btn-comprar">Comprar</button>
       </form>
    </div>
 </div>