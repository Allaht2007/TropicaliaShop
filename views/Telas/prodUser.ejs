<%- include("../partials/header.ejs"); %>
<%- include("../partials/navbar.ejs"); %>
<head>
    <link rel="stylesheet" href="nav_style.css">
    <link rel="stylesheet" href="style/listProds.css">
    <link rel="stylesheet" href="style/info.css">
    <link rel="stylesheet" href="style/homeStyle.css">
    <link rel="stylesheet" href="style/favs.css">
</head>
<body>
    <section class="principal">
        <span class="ingrid-darling-regular nameLogo spanTamCenter">Meus Produtos</span>
            
                
                <% if(classificado != ''){ %>
                    <div class="div_cad__mini">
                        <a href="/cadProduto">
                            <div class="circle_mini"> 
                                <div class="plus_mini"></div> 
                            </div>
                        </a>
                    </div>
                    <div class="container-listProd">
                    <% classificado.forEach((classi)=>{  %>
                        
                    <div class="conteudo_listProd">
                        <img src="<%= classi.imagens %>" class="imagen_classificado" alt="Logo da ice">
                            <div class="pegaTudo">
                                <div class="spanProds" id="<%= classi.id_classificado %>">
                                    <span id="nomeProduto"><%= classi.nome_prod %></span>
                                    <span id="valorProduto">R$ <%= classi.preco_prod.toFixed(2) %></span>
                                </div>
                                    <div class="pegaForm">
                                        <form action="/deletaProd" method="post" onsubmit="confirmaDeleta(event,this)">
                                            <input type="hidden" name="idProd" id="idProd" value="<%= classi.id_classificado %> ">
                                            <button type="" class="ic--baseline-delete"></button>
                                        </form>
                                        <form action="/editaProd" method="post">
                                            <input type="hidden" name="idProd" id="idProd" value="<%= classi.id_classificado %>">
                                            <button type="submit" class="btnEdit">Editar</button>
                                        </form>
                                    </div>
                            </div>
                    </div>
                    
                    <% }) %>
               
                <% }else{ %>
                    <div class="container-listProd">
                    <div class="div-cad__undefined">
                        <a href="/cadProduto">
                            <div class="circle"> 
                                <div class="plus"></div> 
                            </div>
                            <span class="div-cad-undefined__span">Cadastre um produto</span>
                        </a>
                        
                    </div>
                <% } %>
            </div>
    </section>
</body>

<%- include("../partials/footer.ejs"); %>
<script>
    function confirmaDeleta(event,form){
      event.preventDefault();
      let decisao = confirm("Confirma Exclus√£o")  
      if(decisao){
        form.submit();
      }
    }
  </script>